class Funcionario:
    def __init__(self, nome, salario, cargo):
        self.nome = nome
        self.salario = salario
        self.cargo = cargo

    def calcular_bonus(self):
        if self.cargo == "Gerente":
            return self.salario * 0.10
        else:
            return self.salario * 0.05

def main():
    funcionario1 = Funcionario("Carlos", 3000, "Gerente")
    funcionario2 = Funcionario("Ana", 2000, "Analista")

    print(funcionario1.nome, "- Salário com bônus:", funcionario1.salario + funcionario1.calcular_bonus())
    print(funcionario2.nome, "- Salário com bônus:", funcionario2.salario + funcionario2.calcular_bonus())

main()
